# Database
DATABASE_URL="postgresql://user:password@localhost:5432/producer_tour?schema=public"

# Server
NODE_ENV=development
PORT=3000
# For development, use localhost. For production, set to your Vercel frontend domain
CORS_ORIGIN=http://localhost:5173

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Producer Tour <noreply@producertour.com>
FRONTEND_URL=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# AWS S3 (Optional - for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=producer-tour-statements
AWS_REGION=us-east-1

# External APIs (Future)
GOOGLE_SHEETS_API_KEY=
BMI_API_KEY=
ASCAP_API_KEY=
SESAC_API_KEY=

# Spotify Web API
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
