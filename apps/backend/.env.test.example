# Test Environment Variables
# Copy this file to .env.test and update with your test database credentials

# IMPORTANT: Use a separate test database to avoid data loss
DATABASE_URL="postgresql://user:password@localhost:5432/producer_tour_test"

# JWT Secret (can use same as dev)
JWT_SECRET="test-jwt-secret-key-change-in-production"

# Server Config
PORT=3001
NODE_ENV=test

# CORS (use localhost for tests)
CORS_ORIGIN="http://localhost:5173"

# File Upload
MAX_FILE_SIZE=10485760

# NOTE: For tests, you may want to use an in-memory SQLite database:
# DATABASE_URL="file:./test.db"
