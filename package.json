{
  "name": "producer-tour-platform",
  "version": "1.1.0",
  "description": "Music publishing royalty management platform",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "apps/game-server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/backend\" \"npm run dev --workspace=apps/frontend\" \"npm run dev --workspace=apps/game-server\"",
    "game-server": "npm run dev --workspace=apps/game-server",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "backend": "npm run dev --workspace=apps/backend",
    "frontend": "npm run dev --workspace=apps/frontend",
    "db:studio": "npm run db:studio --workspace=apps/backend",
    "db:migrate": "npm run db:migrate --workspace=apps/backend",
    "db:generate": "npm run db:generate --workspace=apps/backend",
    "typecheck": "npm run typecheck --workspaces"
  },
  "keywords": [
    "music",
    "publishing",
    "royalties",
    "PRO"
  ],
  "author": "Producer Tour",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier-plugin-tailwindcss": "^0.7.1"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/jszip": "^3.4.0",
    "jszip": "^3.10.1",
    "react-globe.gl": "^2.37.0"
  }
}
